# Application
APP_NAME=ML-Audit Growth Intelligence Platform
ENVIRONMENT=development
DEBUG=True
LOG_LEVEL=INFO

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/ml_audit
REDIS_URL=redis://localhost:6379/0

# Shopify
SHOPIFY_SHOP_URL=cassbrothers.myshopify.com
SHOPIFY_API_KEY=your_shopify_api_key
SHOPIFY_API_SECRET=your_api_secret_here
SHOPIFY_ACCESS_TOKEN=shpat_your_access_token_here
SHOPIFY_API_VERSION=2023-01

# Klaviyo
KLAVIYO_API_KEY=your_klaviyo_private_key
KLAVIYO_PUBLIC_KEY=your_klaviyo_public_key

# Google Analytics 4
GA4_PROPERTY_ID=your_property_id
GA4_CREDENTIALS_PATH=./credentials/ga4-credentials.json

# Google Ads
GOOGLE_ADS_CLIENT_ID=your_client_id
GOOGLE_ADS_CLIENT_SECRET=your_client_secret
GOOGLE_ADS_DEVELOPER_TOKEN=your_developer_token
GOOGLE_ADS_REFRESH_TOKEN=your_refresh_token
GOOGLE_ADS_CUSTOMER_ID=your_customer_id
GOOGLE_ADS_LOGIN_CUSTOMER_ID=your_login_customer_id

# Google Search Console
GSC_CREDENTIALS_PATH=./credentials/gsc-credentials.json
GSC_SITE_URL=https://yoursite.com
# Backfill settings (optional - these have defaults)
GSC_BACKFILL_WINDOW_DAYS=14       # Days per fetch window (7-30)
GSC_BACKFILL_DELAY_SECONDS=2.0    # Delay between windows for rate limiting
GSC_BACKFILL_MAX_RETRIES=3        # Retries per window on failure
# Daily sync settings
GSC_DAILY_SYNC_DAYS=3             # Days to sync in daily job (1-7)
# Brand terms for non-brand query analysis (comma-separated, case-insensitive)
GSC_BRAND_TERMS=cass,cass brothers,cassbrothers,casa,casa brothers

# Google Sheets (Product Cost Data)
GOOGLE_SHEETS_CREDENTIALS_PATH=./credentials/google-sheets-sa.json
COST_SHEET_ID=your_spreadsheet_id
COST_SHEET_RANGE=A:AA
COST_SHEET_TAB_PREFIX=3monkeys

# Google Ads via Google Sheets (automated export from Google Ads Scripts)
# The ads manager pastes our script into Google Ads > Tools > Scripts.
# The script writes daily campaign data to this Google Sheet.
GOOGLE_ADS_SHEET_ID=your_google_ads_spreadsheet_id
GOOGLE_ADS_SHEET_TAB=Campaign Data

# Hotjar (Optional)
HOTJAR_SITE_ID=your_site_id
HOTJAR_API_KEY=your_hotjar_api_key

# Microsoft Clarity (Alternative to Hotjar)
CLARITY_PROJECT_ID=your_project_id
CLARITY_API_KEY=your_clarity_api_key

# GitHub
GITHUB_ACCESS_TOKEN=ghp_your_personal_access_token
GITHUB_REPO=owner/repo-name

# ML Configuration
ML_MODEL_PATH=./models
ML_TRAINING_INTERVAL=86400  # seconds (24 hours)
CHURN_PREDICTION_THRESHOLD=0.7
ANOMALY_DETECTION_SENSITIVITY=0.05

# Alert Configuration
ALERT_EMAIL_FROM=alerts@yourcompany.com
ALERT_EMAIL_TO=team@yourcompany.com
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# Slack Integration (optional)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Data Sync Schedule (cron format)
SYNC_SHOPIFY_SCHEDULE=0 */6 * * *        # Every 6 hours
SYNC_KLAVIYO_SCHEDULE=0 */4 * * *        # Every 4 hours
SYNC_GA4_SCHEDULE=0 2 * * *              # Daily at 2 AM
SYNC_GOOGLE_ADS_SCHEDULE=0 1 * * *       # Daily at 1 AM
SYNC_SEARCH_CONSOLE_SCHEDULE=0 4 * * *   # Daily at 4 AM (after GSC data delay)

# LLM Configuration (for AI-powered explanations)
ANTHROPIC_API_KEY=your_anthropic_api_key
LLM_MODEL=claude-3-5-sonnet-20241022
ENABLE_LLM_INSIGHTS=True
LLM_MAX_TOKENS=2000

# Feature Flags
ENABLE_CHURN_PREDICTION=True
ENABLE_ANOMALY_DETECTION=True
ENABLE_SEO_ANALYSIS=True
ENABLE_AD_MONITORING=True
ENABLE_AUTO_ALERTS=True
